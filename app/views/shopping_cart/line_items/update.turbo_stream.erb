<% if @line_item.destroyed? %>
  <%= render template: 'shopping_cart/line_items/destroy' %>
<% else %>
  <%= turbo_stream.replace dom_id(@line_item) do %>
    <%= render partial: 'shopping_cart/line_items/line_item',
          locals: { line_item: @line_item } %>
  <% end %>
<% end %>
<%= turbo_stream.update "cart_total" do %>
  <%= render partial: 'shopping_cart/total' %>
<% end %>
